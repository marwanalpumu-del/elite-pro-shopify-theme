/*
  ==========================================================================
  ELITE PRO - MASTER LUXURY ENGINE (Full Suite)
  Version: 1.0.0 (Production Ready)
  Framework: Shopify Online Store 2.0
  Design: Gold Aesthetics & Glassmorphism
  ==========================================================================
*/

/* --- 1. THEME ENGINE & DYNAMIC VARIABLES --- */
:root {
  --bg-color: {{ settings.bg_color | default: '#050505' }};
  --elite-gold-primary: {{ settings.gold_primary | default: '#D4AF37' }};
  --elite-gold-glow: {{ settings.gold_glow | default: 'rgba(212, 175, 55, 0.3)' }};
  --glass-blur: {{ settings.blur_intensity | default: 15 }}px;
  
  --body-font: {{ settings.type_base_font.family }}, {{ settings.type_base_font.fallback_families }};
  --header-font: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};

  --transition-smooth: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  --transition-apple: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  --main-radius: 20px;
  --panel-bg: rgba(255, 255, 255, 0.03);
  --panel-border: 1px solid rgba(255, 255, 255, 0.1);
}

/* --- 2. GLOBAL RESET & BASE STYLES --- */
body {
  background-color: var(--bg-color);
  font-family: var(--body-font);
  color: #ffffff;
  margin: 0;
  padding: 0;
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
}

[lang="ar"] body {
  direction: rtl;
  text-align: right;
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--header-font);
  font-weight: 400;
  letter-spacing: 2px;
  margin: 0;
}

::-webkit-scrollbar { width: 5px; }
::-webkit-scrollbar-track { background: var(--bg-color); }
::-webkit-scrollbar-thumb { background: var(--elite-gold-primary); border-radius: 10px; }

.gold-text {
  color: var(--elite-gold-primary);
  text-shadow: 0 0 15px var(--elite-gold-glow);
}

.glass-panel {
  background: var(--panel-bg);
  backdrop-filter: blur(var(--glass-blur));
  -webkit-backdrop-filter: blur(var(--glass-blur));
  border: var(--panel-border);
  border-radius: var(--main-radius);
}

/* --- 3. LUXURY NAVIGATION & HEADER --- */
#EliteHeader {
  position: fixed;
  top: 0; left: 0; right: 0; z-index: 1000;
  padding: 30px 5%;
  transition: var(--transition-smooth);
}

#EliteHeader.is-scrolled {
  padding: 15px 5%;
  background: rgba(5, 5, 5, 0.85);
  backdrop-filter: blur(15px);
  border-bottom: 1px solid rgba(212, 175, 55, 0.1);
}

.nav-link {
  text-decoration: none;
  color: #ffffff;
  font-size: 0.75rem;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin: 0 15px;
  opacity: 0.7;
  transition: var(--transition-apple);
}

.nav-link:hover {
  opacity: 1;
  color: var(--elite-gold-primary);
}

/* --- 4. HERO SECTION --- */
.elite-hero {
  position: relative; 
  height: 100vh; 
  overflow: hidden;
  display: flex; align-items: center; justify-content: center;
}

.hero-video, .hero-img {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%; 
  object-fit: cover; z-index: 1;
}

.hero-overlay {
  position: relative; z-index: 2; width: 100%; height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.7));
  display: flex; align-items: center; justify-content: center;
  text-align: center;
}

.hero-title {
  color: var(--elite-gold-primary);
  font-size: clamp(2.5rem, 6vw, 5rem);
  letter-spacing: 10px;
  text-transform: uppercase;
  margin-bottom: 20px;
}

/* --- 5. PRODUCT GRID & CARDS --- */
.elite-grid {
  display: grid; 
  grid-template-columns: repeat(4, 1fr); 
  gap: 30px;
  padding: 50px 5%;
}

.elite-pro-card { position: relative; transition: var(--transition-apple); }

.image-inner { 
  border-radius: 12px; 
  overflow: hidden; 
  aspect-ratio: 3/4; 
  position: relative; 
  background: #111; 
}

.main-card-img, .hover-card-img {
  width: 100%; height: 100%; object-fit: cover; 
  object-position: center;
  transition: 1.2s cubic-bezier(0.16, 1, 0.3, 1);
}

.hover-card-img { position: absolute; top: 0; left: 0; opacity: 0; }
.elite-pro-card:hover .hover-card-img { opacity: 1; }
.elite-pro-card:hover .main-card-img { transform: scale(1.1); }

/* --- 6. PRICE & BADGES --- */
.product-price-wrapper { margin-top: 10px; font-size: 1.1rem; font-weight: 300; }

.badge {
  position: absolute; top: 15px; left: 15px;
  padding: 5px 12px; font-size: 0.6rem; letter-spacing: 2px;
  background: var(--elite-gold-primary); color: #000;
  border-radius: 2px; z-index: 5; text-transform: uppercase;
}

.badge.sold-out { background: #333; color: #fff; }

/* --- 7. BUTTONS --- */
.btn-elite, .btn-quick-add {
  display: inline-block;
  padding: 15px 40px;
  border: 1px solid var(--elite-gold-primary);
  color: var(--elite-gold-primary);
  text-decoration: none;
  font-size: 0.8rem; letter-spacing: 2px; text-transform: uppercase;
  transition: var(--transition-apple);
  background: transparent; cursor: pointer;
}

.btn-elite:hover, .btn-quick-add:hover {
  background: var(--elite-gold-primary);
  color: var(--bg-color);
  box-shadow: 0 0 20px var(--elite-gold-glow);
}

/* --- 8. PREDICTIVE SEARCH (Glass UI) --- */
#predictive-search-results {
  position: absolute; top: 100%; right: 0; width: 350px;
  background: rgba(10, 10, 10, 0.9); backdrop-filter: blur(20px);
  border: 1px solid rgba(212, 175, 55, 0.2); border-radius: 15px;
  padding: 20px; box-shadow: 0 20px 40px rgba(0,0,0,0.5); margin-top: 15px;
}

/* --- 9. INTERACTIVE UI (CURSOR & PRELOADER) --- */
.custom-cursor {
  width: 20px; height: 20px; background: var(--elite-gold-primary);
  position: fixed; border-radius: 50%; pointer-events: none;
  z-index: 9999; mix-blend-mode: difference; 
  transition: transform 0.3s ease; top: 0; left: 0; transform: translate(-50%, -50%);
}

#Preloader {
  position: fixed; inset: 0; background: var(--bg-color); z-index: 10000;
  display: flex; justify-content: center; align-items: center;
}

.loader-logo { font-size: 1.5rem; letter-spacing: 5px; animation: pulse 2s infinite ease-in-out; }

/* --- 10. LUXURY FOOTER --- */
.elite-footer {
  padding: 80px 5% 40px; background: #000;
  border-top: 1px solid rgba(212, 175, 55, 0.1); margin-top: 100px;
}

.footer-grid {
  display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 40px;
}

.footer-link {
  display: block; color: #fff; opacity: 0.5; text-decoration: none;
  margin-bottom: 12px; font-size: 0.8rem; transition: 0.3s;
}

.footer-link:hover { opacity: 1; color: var(--elite-gold-primary); padding-left: 5px; }

/* --- 11. RESPONSIVE ENGINE --- */
@media screen and (max-width: 1024px) {
  .elite-grid { grid-template-columns: repeat(2, 1fr); }
}

@media screen and (max-width: 768px) {
  .elite-grid { grid-template-columns: 1fr; gap: 20px; }
  .hero-title { letter-spacing: 4px; }
  .custom-cursor { display: none; }
  #EliteHeader { padding: 15px 5%; }
}

@keyframes pulse {
  0%, 100% { opacity: 0.5; transform: scale(0.95); }
  50% { opacity: 1; transform: scale(1); }
}
