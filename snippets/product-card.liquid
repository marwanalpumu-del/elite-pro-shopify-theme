<div class="elite-card glass-effect">
  <a href="{{ product.url }}" class="card-link">
    <div class="card-image-wrapper">
      {% if product.featured_image != blank %}
        <img src="{{ product.featured_image | img_url: '600x600', crop: 'center' }}" 
             alt="{{ product.title }}" 
             class="product-img"
             loading="lazy">
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
      
      {% if product.compare_at_price > product.price %}
        <span class="sale-badge">تخفيض</span>
      {% endif %}
    </div>

    <div class="card-info">
      <h3 class="product-title">{{ product.title }}</h3>
      <div class="product-price">
        <span class="current-price gold-text">{{ product.price | money }}</span>
        {% if product.compare_at_price > product.price %}
          <span class="old-price">{{ product.compare_at_price | money }}</span>
        {% endif %}
      </div>
    </div>
  </a>
  
  <div class="card-actions">
    <form method="post" action="/cart/add">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
      <button type="submit" class="quick-add-btn">
        <span>+ أضف للسلة</span>
      </button>
    </form>
  </div>
</div>

<style>
  .elite-card {
    position: relative;
    overflow: hidden;
    transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .elite-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.5);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
  }

  .card-image-wrapper {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: 12px;
  }

  .product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .elite-card:hover .product-img {
    transform: scale(1.1);
  }

  .sale-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #ff4444;
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: bold;
  }

  .card-info {
    padding: 15px;
    text-align: center;
  }

  .product-title {
    font-size: 1rem;
    margin: 10px 0;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .product-price {
    display: flex;
    justify-content: center;
    gap: 10px;
    align-items: center;
    font-size: 1.1rem;
  }

  .old-price {
    text-decoration: line-through;
    color: #888;
    font-size: 0.9rem;
  }

  .card-actions {
    padding: 0 15px 15px;
    opacity: 0;
    transition: 0.3s;
    transform: translateY(10px);
  }

  .elite-card:hover .card-actions {
    opacity: 1;
    transform: translateY(0);
  }

  .quick-add-btn {
    width: 100%;
    background: transparent;
    color: var(--gold);
    border: 1px solid var(--gold);
    padding: 10px;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    transition: 0.3s;
  }

  .quick-add-btn:hover {
    background: var(--gold);
    color: #000;
  }

  /* للجوال تظهر الأزرار دائماً لسهولة الاستخدام */
  @media (max-width: 768px) {
    .card-actions { opacity: 1; transform: translateY(0); }
    .product-title { font-size: 0.9rem; }
  }
</style>
