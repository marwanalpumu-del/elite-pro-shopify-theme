<div class="elite-pro-card glass-panel">
  <a href="{{ product.url }}" class="card-image-link">
    <div class="image-inner">
      <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}" loading="lazy">
      <div class="shine-effect"></div>
    </div>
  </a>
  <div class="card-info">
    <h3 class="card-title">{{ product.title }}</h3>
    <p class="card-price gold-text">{{ product.price | money }}</p>
    <form method="post" action="/cart/add">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}">
      <button type="submit" class="btn-elite-sm">ADD TO BAG</button>
    </form>
  </div>
</div>

<style>
  .elite-pro-card { border-radius: 20px; overflow: hidden; transition: 0.5s; }
  .image-inner { position: relative; overflow: hidden; aspect-ratio: 1; }
  .image-inner img { width: 100%; height: 100%; object-fit: cover; transition: 1s; }
  .elite-pro-card:hover img { transform: scale(1.1); }
  .card-info { padding: 25px; text-align: center; }
  .btn-elite-sm { background: var(--primary-gold); border: none; padding: 10px 25px; border-radius: 50px; font-weight: bold; cursor: pointer; margin-top: 15px; width: 100%; }
</style>
