<ul class="social-list-elite">
  {%- if settings.social_instagram_link != blank -%}
    <li><a href="{{ settings.social_instagram_link }}" aria-label="Instagram">{% render 'icon-instagram' %}</a></li>
  {%- endif -%}
  {%- if settings.social_twitter_link != blank -%}
    <li><a href="{{ settings.social_twitter_link }}" aria-label="Twitter">{% render 'icon-twitter' %}</a></li>
  {%- endif -%}
</ul>

<style>
  .social-list-elite { display: flex; gap: 15px; list-style: none; padding: 0; }
  .social-list-elite svg { width: 18px; height: 18px; fill: currentColor; transition: 0.3s; opacity: 0.6; }
  .social-list-elite a:hover svg { fill: var(--elite-gold-primary); opacity: 1; transform: translateY(-3px); }
</style>
