<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}" dir="{% if request.locale.iso_code == 'ar' %}rtl{% else %}ltr{% endif %}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    <title>{{ page_title }} | {{ shop.name }}</title>
    {{ content_for_header }}
    
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700&family=Playfair+Display:wght@700&family=Tajawal:wght@400;700&display=swap" rel="stylesheet">
    {{ 'theme-elite.css' | asset_url | stylesheet_tag }}
</head>
<body class="elite-dark-mode {% if request.locale.iso_code == 'ar' %}rtl-mode{% endif %}">
    
    <div id="preloader"><div class="loader-logo">{{ shop.name }}</div></div>
    <div class="custom-cursor"></div>

    {% section 'header-elite' %}

    <main id="MainContent" role="main">
        {{ content_for_layout }}
    </main>

    <script src="{{ 'theme-elite.js' | asset_url }}" defer></script>
</body>
</html>
