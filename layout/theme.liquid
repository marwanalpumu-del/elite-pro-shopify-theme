<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}" dir="{% if request.locale.iso_code == 'ar' %}rtl{% else %}ltr{% endif %}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    {%- comment -%} 
      Dynamic Font Loading from Theme Settings
    {%- endcomment -%}
    <style>
      {{ settings.type_header_font | font_face: font_display: 'swap' }}
      {{ settings.type_base_font | font_face: font_display: 'swap' }}
      
      {%- assign header_font_bold = settings.type_header_font | font_modify: 'weight', 'bold' -%}
      {% if header_font_bold %}
        {{ header_font_bold | font_face: font_display: 'swap' }}
      {% endif %}

      :root {
        /* Color Palette */
        --primary-gold: {{ settings.gold_primary | default: '#D4AF37' }};
        --bg-dark: {{ settings.bg_dark | default: '#050505' }};
        --text-light: #ffffff;
        
        /* Typography - Dynamic from Font Picker */
        --font-header-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
        --font-body-family: {{ settings.type_base_font.family }}, {{ settings.type_base_font.fallback_families }};
        --font-body-style: {{ settings.type_base_font.style }};
        --font-body-weight: {{ settings.type_base_font.weight }};

        /* Glassmorphism */
        --glass-bg: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 255, 255, 0.1);
        --glass-blur: {{ settings.blur_intensity | default: 25 }}px;
        
        /* Transitions */
        --transition-main: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
      }

      /* Global Layout */
      body {
        margin: 0;
        background-color: var(--bg-dark);
        color: var(--text-light);
        font-family: var(--font-body-family);
        font-style: var(--font-body-style);
        font-weight: var(--font-body-weight);
        overflow-x: hidden;
        line-height: 1.6;
      }

      h1, h2, h3, h4, h5, h6, .section-title {
        font-family: var(--font-header-family);
      }

      .container { max-width: 1400px; margin: 0 auto; padding: 0 20px; }
      
      .glass-panel {
        background: var(--glass-bg);
        backdrop-filter: blur(var(--glass-blur));
        -webkit-backdrop-filter: blur(var(--glass-blur));
        border: 1px solid var(--glass-border);
      }

      /* Animation reveal classes */
      .reveal { opacity: 0; transform: translateY(30px); transition: var(--transition-main); }
      .reveal.active { opacity: 1; transform: translateY(0); }
    </style>

    {{ content_for_header }}
    {{ 'elite-pro.css' | asset_url | stylesheet_tag }}
</head>
<body class="elite-pro-dark">
    
    <div id="preloader">
      <div class="loader-content">
        <h1 class="loader-logo">ELITE PRO</h1>
        <div class="loader-bar"></div>
      </div>
    </div>

    <div class="custom-cursor"></div>

    {% section 'header-elite' %}

    <main id="MainContent" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer-elite' %}

    <script src="{{ 'elite-pro.js' | asset_url }}" defer></script>
</body>
</html>
