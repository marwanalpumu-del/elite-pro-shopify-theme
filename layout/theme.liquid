
<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title }}</title>
    {{ content_for_header }}
    {{ 'elite-main.css' | asset_url | stylesheet_tag }}
    <style>
      body { background-color: #0a0a0a; color: white; margin: 0; }
    </style>
  </head>
  <body>
    {% section 'header' %}
    
    <main role="main" id="MainContent">
      {{ content_for_layout }}
    </main>

    <footer>
      <p style="text-align:center; padding: 20px;">&copy; {{ 'now' | date: "%Y" }} Elite Pro Theme</p>
    </footer>
  </body>
</html>
