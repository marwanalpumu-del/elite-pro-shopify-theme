<section class="container reveal" style="padding: 100px 0;">
  <h2 class="section-title">{{ section.settings.title }}</h2>
  <div class="elite-grid">
    {% for product in section.settings.collection.products limit: section.settings.count %}
      {% render 'product-card', product: product %}
    {% endfor %}
  </div>
</section>

<style>
  .section-title { text-align: center; font-family: 'Playfair Display'; font-size: 2.5rem; margin-bottom: 50px; color: #fff; }
</style>

{% schema %}
{
  "name": "Elite Collection",
  "settings": [
    { "type": "text", "id": "title", "label": "Heading", "default": "Featured Collection" },
    { "type": "collection", "id": "collection", "label": "Select Collection" },
    { "type": "range", "id": "count", "min": 4, "max": 12, "default": 4, "label": "Show Number of Products" }
  ],
  "presets": [{"name": "Elite Collection"}]
}
{% endschema %}
