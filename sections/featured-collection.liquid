<section class="featured-collection-section reveal">
  <div class="container">
    <div class="section-header text-center">
      <h2 class="gold-text">{{ section.settings.title }}</h2>
      <div class="luxury-line"></div>
    </div>

    <div class="elite-grid">
      {% assign collection = collections[section.settings.collection] %}
      {% for product in collection.products limit: section.settings.limit %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "NEW ARRIVALS" },
    { "type": "collection", "id": "collection", "label": "Collection" },
    { "type": "range", "id": "limit", "min": 2, "max": 12, "step": 1, "label": "Limit", "default": 4 }
  ],
  "presets": [{ "name": "Featured Collection" }]
}
{% endschema %}
