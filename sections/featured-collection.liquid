<section class="featured-collection section-{{ section.id }}">
  <div class="container">
    
    {% if section.settings.title != blank %}
      <div class="section-header">
        <h2 class="gold-text">{{ section.settings.title }}</h2>
        {% if section.settings.view_all %}
          <a href="{{ collections[section.settings.collection].url }}" class="view-all-link">مشاهدة الكل ←</a>
        {% endif %}
      </div>
    {% endif %}

    <div class="elite-product-grid">
      {% assign collection = collections[section.settings.collection] %}
      
      {% for product in collection.products limit: section.settings.product_limit %}
        <div class="grid-item">
          {% render 'product-card', product: product %}
        </div>
      {% else %}
        {% comment %} عرض منتجات تجريبية إذا كانت المجموعة فارغة (Onboarding) {% endcomment %}
        {% for i in (1..section.settings.product_limit) %}
          <div class="grid-item">
            <div class="product-card-placeholder glass-effect">
              <div class="placeholder-img"></div>
              <p>منتج تجريبي {{ i }}</p>
              <span class="gold-text">99.00 ر.س</span>
            </div>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .featured-collection {
    padding: 80px 0;
    background: var(--dark);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 40px;
  }

  .section-header h2 {
    font-size: 2rem;
    margin: 0;
  }

  .view-all-link {
    color: #fff;
    text-decoration: none;
    font-size: 0.9rem;
    border-bottom: 1px solid var(--gold);
    padding-bottom: 5px;
  }

  .elite-product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* 4 منتجات في الصف للكمبيوتر */
    gap: 30px;
  }

  /* تحسينات للجوال */
  @media (max-width: 1024px) {
    .elite-product-grid { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 768px) {
    .elite-product-grid { 
      grid-template-columns: repeat(2, 1fr); /* منتجين في الصف للجوال */
      gap: 15px;
    }
    .section-header h2 { font-size: 1.5rem; }
  }

  .product-card-placeholder {
    padding: 20px;
    text-align: center;
    border-radius: 15px;
  }

  .placeholder-img {
    background: rgba(255,255,255,0.05);
    height: 200px;
    margin-bottom: 15px;
    border-radius: 10px;
  }
</style>

{% schema %}
{
  "name": "Elite Collection Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "عنوان القسم",
      "default": "منتجاتنا المختارة"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "اختر المجموعة"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "عدد المنتجات للعرض",
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "view_all",
      "label": "إظهار زر 'مشاهدة الكل'",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Elite Collection Grid"
    }
  ]
}
{% endschema %}
