<section class="elite-hero section-{{ section.id }}">
  <div class="hero-overlay">
    <div class="container hero-container">
      <div class="hero-content glass-effect">
        {% if section.settings.sub_title != blank %}
          <span class="hero-sub gold-text">{{ section.settings.sub_title }}</span>
        {% endif %}
        
        {% if section.settings.title != blank %}
          <h1 class="hero-title">{{ section.settings.title }}</h1>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <p class="hero-desc">{{ section.settings.description }}</p>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <a href="{{ section.settings.button_link }}" class="btn-elite">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .elite-hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    background-image: url('{{ section.settings.image | img_url: "2000x" }}');
    background-size: cover;
    background-position: center;
    background-attachment: fixed; /* تأثير Parallax بسيط */
  }

  /* في حال لم يرفع المستخدم صورة، نضع خلفية سوداء فخمة */
  {% if section.settings.image == blank %}
  .elite-hero {
    background: linear-gradient(45deg, #0a0a0a, #1a1a1a);
  }
  {% endif %}

  .hero-overlay {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0, 0, 0, 0.4); /* طبقة تعتيم للصورة */
    display: flex;
    align-items: center;
    width: 100%;
  }

  .hero-container {
    display: flex;
    justify-content: center;
    text-align: center;
  }

  .hero-content {
    padding: 50px;
    max-width: 700px;
    border-radius: 20px;
    animation: fadeInUp 1s ease-out;
  }

  .hero-sub {
    display: block;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 15px;
  }

  .hero-title {
    font-size: 3.5rem;
    margin-bottom: 20px;
    line-height: 1.1;
    color: #fff;
  }

  .hero-desc {
    font-size: 1.1rem;
    margin-bottom: 30px;
    color: #e0e0e0;
  }

  .btn-elite {
    display: inline-block;
    padding: 15px 40px;
    background: var(--gold);
    color: #000;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    transition: 0.3s;
    text-transform: uppercase;
  }

  .btn-elite:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(212, 175, 55, 0.3);
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* تحسينات للجوال */
  @media (max-width: 768px) {
    .hero-title { font-size: 2.2rem; }
    .hero-content { padding: 30px 20px; margin: 0 15px; }
  }
</style>

{% schema %}
{
  "name": "Elite Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "صورة الخلفية"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "عنوان فرعي (صغير)",
      "default": "مجموعة شتاء 2026"
    },
    {
      "type": "text",
      "id": "title",
      "label": "العنوان الرئيسي",
      "default": "الفخامة في كل تفصيل"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "الوصف",
      "default": "اكتشف تشكيلة الساعات والعطور النادرة المصممة خصيصاً لأصحاب الذوق الرفيع."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "نص الزر",
      "default": "تسوق الآن"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "رابط الزر"
    }
  ],
  "presets": [
    {
      "name": "Elite Hero"
    }
  ]
}
{% endschema %}
