{% comment %}
  Elite Pro Framework - Integrated Luxury Hero
  Performance Optimized | Shopify OS 2.0
{% endcomment %}

<section class="elite-hero reveal" data-section-id="{{ section.id }}">
  
  {%- if section.settings.video_url != blank -%}
    <video autoplay muted loop playsinline preload="auto" class="hero-video">
      <source src="{{ section.settings.video_url }}" type="video/mp4">
    </video>
  {%- elsif section.settings.image != blank -%}
    {{ section.settings.image | image_url: width: 2000 | image_tag: 
      class: 'hero-img', 
      alt: section.settings.title, 
      loading: 'eager', 
      fetchpriority: 'high',
      preload: true 
    }}
  {%- else -%}
    {% comment %} 
      Default: Displays your custom luxury banner if no image is uploaded 
    {% endcomment %}
    <img src="{{ 'hero-banner-luxury.jpg' | asset_url }}" 
         alt="Elite Pro Luxury Showcase" 
         class="hero-img" 
         loading="eager">
  {%- endif -%}

  <div class="hero-overlay" style="background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 100.0 }}));">
    <div class="container text-center">
      
      <h1 class="hero-title">
        {%- if section.settings.title != blank -%}
          {{ section.settings.title | uppercase }}
        {%- else -%}
          ELITE PRO
        {%- endif -%}
      </h1>
      
      {%- if section.settings.subtitle != blank -%}
        <p class="hero-subtitle">{{ section.settings.subtitle | uppercase }}</p>
      {%- else -%}
        <p class="hero-subtitle">DEFINING LUXURY</p>
      {%- endif -%}

      {%- if section.settings.btn_text != blank -%}
        <a href="{{ section.settings.btn_link | default: '#' }}" class="btn-elite" data-cursor-expand>
          {{ section.settings.btn_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Elite Hero Pro",
  "settings": [
    {
      "type": "header",
      "content": "Media Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Background Image",
      "info": "Leave empty to use the default Luxury Banner"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video MP4 URL",
      "info": "Direct .mp4 link overrides images."
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 10,
      "unit": "%",
      "label": "Overlay Darkness",
      "default": 50
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "ELITE PRO"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "DEFINING LUXURY"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "EXPLORE COLLECTION"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Elite Hero Pro",
      "category": "Image"
    }
  ]
}
{% endschema %}
