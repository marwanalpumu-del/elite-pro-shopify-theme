<section class="elite-hero reveal">
  {% if section.settings.video_url != blank %}
    <video autoplay muted loop playsinline class="hero-video">
      <source src="{{ section.settings.video_url }}" type="video/mp4">
    </video>
  {% else %}
    <img src="{{ section.settings.image | image_url: width: 2000 }}" class="hero-img" alt="Elite Hero">
  {% endif %}

  <div class="hero-overlay">
    <div class="container text-center">
      <h1 class="hero-title">{{ section.settings.title }}</h1>
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
      <a href="{{ section.settings.btn_link }}" class="btn-elite">{{ section.settings.btn_text }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Elite Hero",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Hero Image" },
    { "type": "text", "id": "video_url", "label": "Video MP4 URL (Optional)" },
    { "type": "text", "id": "title", "label": "Heading", "default": "DEFINING LUXURY" },
    { "type": "text", "id": "subtitle", "label": "Subheading", "default": "Exclusively Crafted for the Elite" },
    { "type": "text", "id": "btn_text", "label": "Button Text", "default": "EXPLORE COLLECTION" },
    { "type": "url", "id": "btn_link", "label": "Button Link" }
  ],
  "presets": [{ "name": "Elite Hero" }]
}
{% endschema %}
