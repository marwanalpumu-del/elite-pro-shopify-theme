<section class="elite-pro-hero" style="background-image: url('{{ section.settings.image | img_url: '1920x' }}');">
  <div class="hero-overlay" style="background: rgba(0,0,0,{{ section.settings.overlay }});">
    <div class="hero-content-box glass-panel reveal">
      <span class="gold-text-small">{{ section.settings.sub_title }}</span>
      <h1 class="hero-main-title">{{ section.settings.title }}</h1>
      <p class="hero-subtitle">{{ section.settings.desc }}</p>
      <a href="{{ section.settings.link }}" class="btn-elite">{{ section.settings.btn_text }}</a>
    </div>
  </div>
</section>

<style>
  .elite-pro-hero { height: 90vh; background-size: cover; background-position: center; display: flex; align-items: center; justify-content: center; text-align: center; }
  .hero-overlay { width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; }
  .hero-content-box { padding: 60px; max-width: 800px; border-radius: 30px; }
  .hero-main-title { font-size: 4rem; font-family: 'Playfair Display'; margin: 20px 0; line-height: 1.1; }
  .gold-text-small { color: var(--primary-gold); letter-spacing: 5px; text-transform: uppercase; font-size: 0.9rem; }
  .hero-subtitle { margin-bottom: 40px; opacity: 0.8; font-size: 1.1rem; }
</style>

{% schema %}
{
  "name": "Elite Hero",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Background Image" },
    { "type": "select", "id": "overlay", "label": "Overlay Intensity", "options": [
        {"value": "0.3", "label": "Light"}, {"value": "0.5", "label": "Medium"}, {"value": "0.7", "label": "Dark"}
      ], "default": "0.5" },
    { "type": "text", "id": "sub_title", "label": "Sub Title", "default": "Exclusive Collection" },
    { "type": "text", "id": "title", "label": "Heading", "default": "ELITE PRO LUXURY" },
    { "type": "text", "id": "desc", "label": "Description", "default": "Defining the future of luxury commerce." },
    { "type": "text", "id": "btn_text", "label": "Button Text", "default": "EXPLORE NOW" },
    { "type": "url", "id": "link", "label": "Button Link" }
  ],
  "presets": [{"name": "Elite Hero"}]
}
{% endschema %}
