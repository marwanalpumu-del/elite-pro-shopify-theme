<footer class="elite-footer glass-panel">
  <div class="container footer-grid">
    <div class="footer-block">
      <h3 class="gold-text">{{ shop.name }}</h3>
      <p>The pinnacle of luxury e-commerce experience.</p>
    </div>
    
    <div class="footer-block">
      <h4>GUIDANCE</h4>
      <ul class="footer-links">
        <li><a href="/search">Search</a></li>
        <li><a href="/pages/contact">Contact Us</a></li>
        <li><a href="/pages/shipping">Shipping Policy</a></li>
      </ul>
    </div>

    <div class="footer-block newsletter">
      <h4>NEWSLETTER</h4>
      {% form 'customer' %}
        <input type="email" name="contact[email]" placeholder="ENTER EMAIL" class="footer-input">
        <button type="submit" class="gold-text">SUBSCRIBE</button>
      {% endform %}
    </div>
  </div>
  <div class="footer-bottom text-center">
    <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. ALL RIGHTS RESERVED.</p>
  </div>
</footer>

<style>
  .elite-footer { margin-top: 100px; padding: 80px 0 40px; border-top: 1px solid rgba(255,255,255,0.05); }
  .footer-grid { display: grid; grid-template-columns: 2fr 1fr 1.5fr; gap: 50px; }
  .footer-block h4 { font-size: 0.7rem; letter-spacing: 3px; margin-bottom: 25px; opacity: 0.6; }
  .footer-links { list-style: none; padding: 0; }
  .footer-links li { margin-bottom: 10px; }
  .footer-links a { color: #fff; text-decoration: none; font-size: 0.8rem; opacity: 0.5; transition: 0.3s; }
  .footer-links a:hover { opacity: 1; color: var(--elite-gold-primary); }
  .footer-input { background: transparent; border: none; border-bottom: 1px solid rgba(255,255,255,0.1); color: #fff; width: 100%; padding: 10px 0; margin-bottom: 10px; outline: none; }
</style>
