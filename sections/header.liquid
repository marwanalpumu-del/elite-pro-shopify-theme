<header class="elite-header glass-effect">
  <div class="container header-wrapper">
    
    <div class="header-logo">
      <a href="/" class="gold-text logo-link">
        {% if section.settings.logo_text != blank %}
          {{ section.settings.logo_text }}
        {% else %}
          {{ shop.name }}
        {% endif %}
      </a>
    </div>

    <nav class="header-nav">
      <ul class="nav-list">
        {% for link in linklists.main-menu.links %}
          <li><a href="{{ link.url }}" class="nav-link">{{ link.title }}</a></li>
        {% else %}
          <li><a href="/" class="nav-link">الرئيسية</a></li>
          <li><a href="/collections/all" class="nav-link">المتجر</a></li>
        {% endfor %}
      </ul>
    </nav>

    <div class="header-icons">
      <a href="/cart" class="cart-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
      </a>
    </div>

  </div>
</header>

<style>
  .elite-header {
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: 15px 0;
    transition: all 0.3s ease;
  }

  .header-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-link {
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
    letter-spacing: 1px;
  }

  .nav-list {
    display: flex;
    list-style: none;
    gap: 25px;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    color: #ffffff;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: var(--gold);
  }

  .cart-icon {
    color: var(--gold);
    display: flex;
    align-items: center;
  }

  /* تحسينات للجوال */
  @media (max-width: 768px) {
    .nav-list {
      display: none; /* يمكننا لاحقاً إضافة قائمة جانبية للجوال */
    }
  }
</style>

{% schema %}
{
  "name": "Elite Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "نص الشعار البديل",
      "default": "ELITE"
    }
  ]
}
{% endschema %}
