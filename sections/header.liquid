<header class="header-elite-pro glass-panel">
  <div class="header-container container">
    <div class="logo-area">
      <a href="/" class="elite-logo-link">
        {%- if section.settings.logo != blank -%}
          <img src="{{ section.settings.logo | img_url: '300x' }}" alt="{{ shop.name }}">
        {%- else -%}
          <span class="text-logo">ELITE PRO</span>
        {%- endif -%}
      </a>
    </div>

    <nav class="navigation-menu">
      <ul class="nav-links">
        {%- for link in linklists[section.settings.menu].links -%}
          <li><a href="{{ link.url }}" class="nav-item-link">{{ link.title }}</a></li>
        {%- endfor -%}
      </ul>
    </nav>

    <div class="header-actions">
      <a href="/cart" class="cart-trigger">
        <span class="bag-icon">BAG</span>
        <span class="bag-count">[{{ cart.item_count }}]</span>
      </a>
    </div>
  </div>
</header>

<style>
  .header-elite-pro { position: fixed; top: 15px; left: 5%; right: 5%; z-index: 1000; padding: 15px 40px; border-radius: 100px; margin: 0 auto; }
  .header-container { display: flex; justify-content: space-between; align-items: center; }
  .text-logo { font-family: 'Playfair Display', serif; font-weight: 900; color: var(--primary-gold); font-size: 1.5rem; letter-spacing: 2px; }
  .nav-links { display: flex; list-style: none; gap: 30px; }
  .nav-item-link { color: #fff; text-decoration: none; font-size: 0.8rem; text-transform: uppercase; font-weight: 600; transition: 0.3s; }
  .nav-item-link:hover { color: var(--primary-gold); }
  .cart-trigger { color: #fff; text-decoration: none; font-size: 0.8rem; border: 1px solid rgba(212,175,55,0.4); padding: 8px 20px; border-radius: 50px; }
</style>

{% schema %}
{
  "name": "Elite Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo Image" },
    { "type": "link_list", "id": "menu", "label": "Main Menu", "default": "main-menu" }
  ]
}
{% endschema %}
